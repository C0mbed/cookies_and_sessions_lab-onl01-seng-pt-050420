<h1>Cart</h1>
<h2>Add Item:</h2>
<%= form_tag "/products/add" do %>
    <%= label_tag(:item, "Item: ") %>
    <%= text_field_tag(:item) %>
    <%= submit_tag("Add Item") %>
<% end %>
    

<h2>Current Cart:</h2>
    <%= cart.each do |item| %>
        <ul>
            <li><%= item %></li>
        </ul>
    <% end %>